<% provide(:title, @lesson.name) %>
<h1> <%= @lesson.name %> </h1>
<div class= "container">
  <div class="row">
    <div class="col-md-10">
      <div class="lesson-actions">
        <%= link_to t(:edit_lesson), edit_lesson_path(@lesson), class:"btn btn-primary" %>
      </div>
      <div class="lesson-info">
        <h3> <%= "#{t :lesson_objective}: " %> </h3>
        <%= @lesson.objective %>
      </div>
    </div>
  </div>
</div>
