<li>
  <%= link_to course.name, course_path(course) %>
  <br>
  <% if admin? %>
    <div  class="course-actions">
      <%= link_to t(:edit), edit_course_path(course) %> | 

      <%= link_to(t(:delete), course_path(course), method: 'delete',
                  data: { confirm: t(:cf_delete_course) }) %>
    </div>
  <% end %>
</li>
