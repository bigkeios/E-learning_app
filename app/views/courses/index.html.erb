<% provide(:title, t(:courses)) %>
<h1> <%= t :courses %> </h1>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <% if admin? %>
        <%= link_to t(:add_course), new_course_path, class: "btn btn-primary add-link" %>
      <% end %>
      <br>
      <%= will_paginate @courses, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
      <ul class="courses">
        <%= render @courses %>
      </ul>
      <%= will_paginate @courses, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>
</div>
