<% provide(:title, @course.name) %>
<h1> <%= @course.name %> </h1>
<div class= "container">
  <div class="row">
    <div class="col-md-10">
      <div class="course-edit">
        <% if admin? %>
          <%= link_to t(:edit_course), edit_course_path(@course), class: "btn btn-primary" %>
        <% end %>
      </div>
      
      <div class="course-info">
        <h3> <%= "#{t :about_course}: " %> </h3>
        <%= @course.desc %>
      </div>
    </div>
  </div>
</div>
