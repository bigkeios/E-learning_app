<% provide :title, t(:edit_word) %>
<h1> <%= t(:edit_lesson) %> </h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for @word do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <div class= "form-group">
        <%= f.label :word %>
        <%= f.text_field :word, class: "form-control" %>
      </div>

      <div class= "form-group">
        <%= f.label :definition %>
        <%= f.text_area :definition, class: "form-control" %>
      </div>
      
      <%= f.submit t(:edit_word), class:"btn btn-primary"%>
    <% end %>
  </div>
</div>
