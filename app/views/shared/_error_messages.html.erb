<% if @user.errors.any? %>
    <div class="alert alert-danger">
        <p> There are <%= pluralize @user.errors.count, "error" %> in the form </p>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li> <%= msg %> </li>
            <% end %>
        </ul>
    </div>
<% end %>